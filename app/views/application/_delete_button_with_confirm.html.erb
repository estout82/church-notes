<div class="inline-block" data-controller="modal">
  <button class="appearance-none text-primary py-2" data-action="click->modal#open">Delete</button>
  <div class="overlay" data-modal-target="panel">
    <div class="bg-fill rounded shadow-lg p-4">
      <h3 class="text-white font-bold mb-2">Are you sure?</h3>

      <% if defined? message %>
        <p class="mb-4">
          <%= message %>
        </p>
      <% end %>

      <div>
        <%= form_with url: path, method: :delete do |f| %>
          <%= f.submit "Delete", class: "bg-primary py-2 px-4 rounded text-fill mr-2", data: { "turbo-frame": "_top" } %>
        <% end %>
        <button class="ml-2 appearance-none bg-muted rounded px-4 py-1 text-fill" data-action="click->modal#close">Cancel</button>
      </div>
    </div>
  </div>
</div>
