<%# Renders UI changes after email is sent %>

<%= turbo_stream.replace :new_external_note_email do %>
  <%= turbo_frame_tag :new_external_note_email do %>
    <div>
      <h3 class="font-semibold text-xl mb-4">Email Note</h3>

      <p class="text-lg flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-success mr-2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
        </svg>
        We've sent your notes to you!
      </p>

      <div class="mt-2 mb-4 text-center">
        <%=
          link_to "Send Another Email",
            new_external_note_email_path(@note),
            class: "text-fill bg-primary px-2 py-1 rounded hover:opacity-90 text-sm"
        %>
      </div>

      <p class="mt-2 fond-bold text-sm text-muted">
        Tip: Check your spam folder if you can't find the email
      </p>
    </div>
  <% end %>
<% end %>
