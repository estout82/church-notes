<div>
  <aside class="flex justify-between bg-fill items-center p-4 rounded">
    <h3 class="font-semibold text-xl">
      Users

      <span class="text-sm rounded-full bg-blue-200 text-blue-700 px-4 ml-4 py-1">
        <%= pluralize @members.size, "User" %>
      </span>
    </h3>

    <div>
      <button
        data-application-target="modalButton"
        data-modal-id="new_member"
        data-modal-action="open"
        class="px-4 py-1 text-white bg-primary rounded"
      >
        Add User
      </button>
    </div>
  </aside>

  <section class="col-span-3 py-4 px-5 bg-fill rounded-md mt-4">
    <ul id="members" class="mt-4">

      <% @members.each do |member| %>
        <%= render "accounts/members/member", member: %>
      <% end %>

    </ul>
  </section>
</div>

<%= render "application/modal", modal_id: :new_member do %>
  <%=
    turbo_frame_tag :new_member,
      src: new_account_member_path(@account),
      loading: :lazy
  %>
<% end %>
