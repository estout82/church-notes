<table border="0" cellpadding="0" cellspacing="0" style="border-collapse: collapse; width: 100%;">
  <tr>
    <td style="border-left: 4px solid lightgrey;"></td>

    <td style="padding: 10px; color: black;">
      <table>
        <tr>
          <td style="font-style: italic;">
            <%= raw renderer.render_html(html: block_data.data["text"]) %>
          </td>
        </tr>

        <tr>
          <td cellpadding="10" style="padding-top: 10px; color: grey; font-style: normal;">
            <%= raw renderer.render_html(html: block_data.data["caption"]) %>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
